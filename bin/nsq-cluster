#!/usr/bin/env ruby

$:.unshift File.join(File.dirname(__FILE__), "../lib")

require 'nsq-cluster'
require 'optparse'

options = {
  nsqd_count: 1,
  nsqlookupd_count: 1,
  nsqadmin: true,
  silent: false
}

OptionParser.new do |opts|
  opts.banner = "Usage: nsq-cluster [options]"

  opts.on("-q", "--nsqd", "Number of nsqd instances to run") do |c|
    options[:nsqd_count] = c
  end

  opts.on("-l", "--nsqlookupd", "Number of nsqd instances to run") do |l|
    options[:nsqlookupd_count] = l
  end
end.parse!

cluster = NsqCluster.new(options)
cluster.block_until_running

Signal.trap('INT') do
  print 'Shutting down ... '
  cluster.destroy
  cluster.block_until_stopped
  puts 'done'
  exit
end

loop { sleep(1) }
